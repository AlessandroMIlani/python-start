<Mypopup>:
    send_form: send_form 
    id: popup
    size_hint: 0.5,0.5
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Send form?"
            color: [1,1,1,1]
            font_size: 20
        BoxLayout:
            orientation: "horizontal"
            Button:
                id : send_form
                size_hint_y: None
                height: 50
                text: "Confirm"
                on_release:
                    root.send_form()
                    root.dismiss()

            Button:
                size_hint_y: None
                height: 50
                text: "Cancel"
                on_press:
                    root.dismiss()


<SecondWindow>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Second screen"
            color: [1,1,1,1]
            font_size: 90
        Button:
            text: "Back"
            on_release:
                root.go_back()
            size_hint_y: 0.1